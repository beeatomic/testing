-- Engine.lua (upload this to GitHub)
local Engine = {}

function Engine:Window()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "CustomWindow"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 400, 0, 250)
    Frame.Position = UDim2.new(0.5, -200, 0.5, -125)
    Frame.AnchorPoint = Vector2.new(0.5, 0.5)
    Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30) -- Dark background
    Frame.BorderSizePixel = 0
    Frame.Parent = ScreenGui

    local borderThickness = 4

    -- Top-left gradient border
    local tlBorder = Instance.new("Frame")
    tlBorder.Size = UDim2.new(0, borderThickness, 0, borderThickness)
    tlBorder.Position = UDim2.new(0, 0, 0, 0)
    tlBorder.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    tlBorder.BorderSizePixel = 0
    tlBorder.Parent = Frame

    local tlGradient = Instance.new("UIGradient")
    tlGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(255,255,255)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(30,30,30))
    }
    tlGradient.Rotation = 45
    tlGradient.Parent = tlBorder

    -- Bottom-right gradient border
    local brBorder = Instance.new("Frame")
    brBorder.Size = UDim2.new(0, borderThickness, 0, borderThickness)
    brBorder.Position = UDim2.new(1, -borderThickness, 1, -borderThickness)
    brBorder.AnchorPoint = Vector2.new(0, 0)
    brBorder.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    brBorder.BorderSizePixel = 0
    brBorder.Parent = Frame

    local brGradient = Instance.new("UIGradient")
    brGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(255,255,255)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(30,30,30))
    }
    brGradient.Rotation = 225
    brGradient.Parent = brBorder

    return Frame
end

return Engine
