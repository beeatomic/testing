-- Engine.lua (upload this to GitHub)
local Engine = {}

function Engine:Window()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "CustomWindow"
    ScreenGui.ResetOnSpawn = false

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 400, 0, 250)
    Frame.Position = UDim2.new(0.5, -200, 0.5, -125)
    Frame.AnchorPoint = Vector2.new(0.5, 0.5)
    Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30) -- Dark background
    Frame.BorderSizePixel = 0
    Frame.Parent = ScreenGui

    -- Top-left gradient
    local tlCorner = Instance.new("Frame")
    tlCorner.Size = UDim2.new(0.2, 0, 0.2, 0)
    tlCorner.Position = UDim2.new(0, 0, 0, 0)
    tlCorner.BackgroundColor3 = Color3.new(1,1,1)
    tlCorner.BorderSizePixel = 0
    tlCorner.Parent = Frame

    local tlGradient = Instance.new("UIGradient")
    tlGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(255,255,255)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(30,30,30))
    }
    tlGradient.Rotation = 45
    tlGradient.Parent = tlCorner

    -- Bottom-right gradient
    local brCorner = Instance.new("Frame")
    brCorner.Size = UDim2.new(0.2, 0, 0.2, 0)
    brCorner.Position = UDim2.new(0.8, 0, 0.8, 0)
    brCorner.BackgroundColor3 = Color3.new(1,1,1)
    brCorner.BorderSizePixel = 0
    brCorner.Parent = Frame

    local brGradient = Instance.new("UIGradient")
    brGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(255,255,255)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(30,30,30))
    }
    brGradient.Rotation = 225
    brGradient.Parent = brCorner

    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    return Frame
end

return Engine
